<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceToForm.Pages.FormDefinition.FormDefintionPage"
              Title="Form Definitions">

  <StackLayout>
    <Label Text="{Binding FormLabelText}" FontSize="15" TextColor="Black" Margin="5,10,5,15">
      
    </Label>
    
    <StackLayout x:Name="formStackLayout" Spacing="0" VerticalOptions="FillAndExpand" >
    </StackLayout>

    <Label Text="{Binding FormErrorMessage}" FontSize="25" TextColor="DarkRed" Margin="30,10,5,15">

    </Label>
  </StackLayout>
   
</ContentPage>