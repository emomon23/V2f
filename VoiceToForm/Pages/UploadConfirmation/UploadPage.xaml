<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceToForm.Pages.UploadConfirmation.UploadPage"
             Title="Upload Data" >
 
    <StackLayout>
      <StackLayout Margin="10,15,5,0">
        <Label Text="{Binding UploadMessage}" TextColor="DarkRed" FontSize="25"></Label>
        <ActivityIndicator IsRunning="{Binding Uploading}"></ActivityIndicator>
      </StackLayout>

      <StackLayout Margin="15,5,5,0" x:Name="checkboxLayout" HeightRequest="25">

      </StackLayout>
    </StackLayout>
   
</ContentPage>